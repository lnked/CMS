# editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
max_line_length = 100
insert_final_newline = true
indent_size = 2

[*.{js,jsx,ts,tsx}]
file_type = jsx
trim_trailing_whitespace = true

[*.{php,twig,tpl,inc}]
indent_size = 4
max_line_length = 180

[.flowconfig]
file_type = shell
syntax = shell

[*.md]
trim_trailing_whitespace = false

[*.{css, scss, sass}]
file_type = scss
syntax = postcss, scss, sass, css

[{*.md, COMMIT_EDITMSG}]
max_line_length = 0
